---
import Layout from '../layouts/Layout.astro';
import Title from '../components/Title.astro'
import WindowButton from '../components/WindowButton.astro';
import LinkedInBadge from '../components/LinkedIn-Badge.astro';
import LinkButton from '../components/LinkButton.astro';
import AccordionButton from '../components/AccordionButton.astro';
import Project from '../components/Project.astro';
// Icons
import ProjectIcon from '../assets/Project-Icon.astro';
import AboutIcon from '../assets/About-Icon.astro';
import EducationIcon from '../assets/Education-Icon.astro';
import SkillIcon from '../assets/Skill-Icon.astro';
import JobsIcon from '../assets/Jobs-Icon.astro';
import LinkedInIcon from '../assets/LinkedIn-Icon.astro';
import GitHubIcon from '../assets/GitHub-Icon.astro';
import InstagramIcon from '../assets/Instagram-Icon.astro';
import PhoneIcon from '../assets/Phone-Icon.astro';
import EmailIcon from '../assets/Email-Icon.astro';
// Styles
import '../styles/global.css';
---

<Layout 
  title="Álvaro Gómez - Full Stack Developer"
  description="Contrata a Álvaro Gómez, un desarrollador Full Stack con experiencia en tecnologías modernas como Angular, Spring Boot y más. Crea aplicaciones web rápidas y eficientes con un enfoque en la experiencia del usuario."
  author="Álvaro Gómez"
>
  <section class="flex">
    {/* Sidebar */}
    <aside>
      <div class="flex group py-5 px-7 border-b border-[--border-color]">
        <WindowButton class="bg-red-500" href="assets/icons/close-icon.png" alt="Close"/>
        <WindowButton class="bg-yellow-500" href="assets/icons/subtract-icon.png" alt="Minimize"/>
        <WindowButton class="bg-green-500" href="assets/icons/full-screen-icon.png" alt="Full screen"/>
      </div>
      <div class="px-8 pt-6">
        <div class="mb-6">
          <AccordionButton title="Categorias"/>
          <LinkButton href="/#about">
            <AboutIcon/>Sobre mí
          </LinkButton>
          <LinkButton href="/#projects">
            <ProjectIcon/>Projectos
          </LinkButton>
          <LinkButton href="/#education">
            <EducationIcon/>Educación
          </LinkButton>
          <LinkButton href="/#skills">
            <SkillIcon/>Habilidades
          </LinkButton>
          <!-- <LinkButton href="#jobs">
            <JobsIcon/>Experiencia
          </LinkButton> -->
        </div>
        <div>
          <AccordionButton title="Contactos"/>
          <LinkButton href="https://www.linkedin.com/in/alvarogmez/">
            <LinkedInIcon/>LinkedIn
          </LinkButton>
          <LinkButton href="">
            <GitHubIcon/>GitHub
          </LinkButton>
          <LinkButton href="">
            <InstagramIcon/>Instagram
          </LinkButton>
          <LinkButton href="/+34672775698">
            <PhoneIcon/>Teléfono
          </LinkButton>
          <LinkButton href="/gomezdelgadoalvaro04@gmail.com">
            <EmailIcon/>Correo
          </LinkButton>
        </div>
      </div>
    </aside>
    <section>
      {/* Navbar */}
      <nav class="flex items-center justify-end p-2 gap-4 border-b">
        {/* LinkedIn Badge */}
        <a href="https://www.linkedin.com/in/alvarogmez/" target="_blank" rel="noopener" class="flex items-center transition md:justify-center md:hover:scale-105">
          <LinkedInBadge />
        </a>
        <img src="assets/images/alvaro3.jpeg" alt="Foto de perfil de Álvaro Gómez" class="size-10 border-2 rounded-full"/>
      </nav>
      <main class="p-6 overflow-y-auto scroll-smooth">
        {/* About me */}
        <section>
          <article id="about" class="flex rounded-3xl bg-animated-gradient">
            <div class="flex flex-col justify-between w-fit m-6 text-white">
                <h1 class="text-4xl font-bold text-black/60">Hola, soy Álvaro Gómez</h1>
                <p class="my-4 text-pretty leading-7">
                  Desarrollador y Programador Web con experiencia en tecnologías modernas como Angular, Spring Boot y más. Crea aplicaciones web rápidas y eficientes con un enfoque en la experiencia del usuario.
                </p>
                <a href="public/Álvaro_Gómez_CV.pdf" download="Álvaro_Gómez_CV.pdf" class="w-fit rounded-full px-4 py-1 bg-white/60 text-black transition hover:bg-white/90 hover:scale-105">
                  <button>Descargar CV</button>
                </a>
              </div>
              <div class="flex items-center justify-center w-1/3">
                <img src="/public/assets/images/alvaro_avatar.png" alt="Avatar de Álvaro Gómez"/>
              </div>
          </article>
    
        {/* Projects */}
        <article id="projects">
          <Title title="Mis Proyectos"/>
          <div class="grid grid-cols-1 gap-4 md:grid-cols-3 lg:grid-cols-2">
            <Project />
          </div>
        </article>
      </main>
    </section>
  </section>
</Layout>
