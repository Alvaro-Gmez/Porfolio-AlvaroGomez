    ---
    import '../styles/global.css';

    const { title, href, class: className ="", ...props } = Astro.props;
    ---

    <a 
        href={href}
        class={`flex justify-center 2xl:justify-start items-center gap-3  2xl:w-full text-md px-2 py-2.5 rounded-lg transition hover:bg-black/40 hover:scale-105 cursor-pointer ${className}`} 
        {...props}
    >
        <span class="absolute left-8 opacity-0 rounded-[0.5rem] text-center text-black bg-white/80 
                    pointer-events-none block 2xl:hidden tooltip border-2 border-black/90"
        >
            {title}
        </span>
        <slot />
    </a>